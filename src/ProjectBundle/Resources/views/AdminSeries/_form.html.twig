{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="box-body icheck">

	<div class="form-group">
	    <label class="control-label col-md-2" for="status"> Translation</label>
		<div class="col-md-9">
			{{ form_widget(form.translations) }}
	    </div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-3" for="productCategory"><span class="require">*</span> Category</label>
		<div class="col-md-6">
			{{form_widget(form.productCategory, {'id' : 'productCategory'})}}
			<div class="error-form">{{form_errors(form.productCategory)}}</div>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-3" for="template"><span class="require">*</span> Template <br>(for fix layout)</label>
		<div class="col-md-6">
			{{form_widget(form.template, {'id' : 'template'})}}
			<div class="error-form">{{form_errors(form.template)}}</div>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-3" for="image">Serie Image</label>
		<div class="col-md-6">
			{% if form.vars.value.image %}
				<a href="{{asset(form.vars.value.image)}}" class="fancybox pull-left" style="margin-right: 10px;margin-bottom: 10px;" >
					<img src="{{asset(form.vars.value.image) | imagine_filter('img_thumb')}}" alt="{{form.vars.value.getTitle}}" />
				</a>
				<span class="checkbox">
					<input type="checkbox" id="removefileimage" name="removefileimage" value="1">
					<label class="control-label" for="removefileimage">  Remove</label>
				</span>
			{% endif %}
			<div class="input-group clearfix">
				{{form_widget(form.image, {'id' : 'image'})}}
				<span class="input-group-btn">
					<button onclick="selectFileWithCKFinder('image');" class="btn btn-default" name="image_btn" id="image_btn" type="button">Browse Server</button>
				</span>
			</div>
			<p class="help-block">size image 300x300px</p>
			<div class="error-form">{{form_errors(form.image)}}</div>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-3" for="image">Banner Image (Desktop) </label>
		<div class="col-md-6">
			{% if form.vars.value.imageBanner %}
				<a href="{{asset(form.vars.value.imageBanner)}}" class="fancybox pull-left" style="margin-right: 10px;margin-bottom: 10px;" >
					<img src="{{asset(form.vars.value.imageBanner) | imagine_filter('img_thumb')}}" alt="{{form.vars.value.getTitle}}" />
				</a>
				<span class="checkbox">
					<input type="checkbox" id="removefileimageBanner" name="removefileimageBanner" value="1">
					<label class="control-label" for="removefileimageBanner">  Remove</label>
				</span>
			{% endif %}
			<div class="input-group clearfix">
				{{form_widget(form.imageBanner, {'id' : 'imageBanner'})}}
				<span class="input-group-btn">
					<button onclick="selectFileWithCKFinder('imageBanner');" class="btn btn-default" name="imageBanner_btn" id="imageBanner_btn" type="button">Browse Server</button>
				</span>
			</div>
			<p class="help-block">size image 1600x566 px</p>
			<div class="error-form">{{form_errors(form.imageBanner)}}</div>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-3" for="image">Banner Image (Mobile) </label>
		<div class="col-md-6">
			{% if form.vars.value.imageBannerMobile %}
				<a href="{{asset(form.vars.value.imageBannerMobile)}}" class="fancybox pull-left" style="margin-right: 10px;margin-bottom: 10px;" >
					<img src="{{asset(form.vars.value.imageBannerMobile) | imagine_filter('img_thumb')}}" alt="{{form.vars.value.getTitle}}" />
				</a>
				<span class="checkbox">
					<input type="checkbox" id="removefileimageBannerMobile" name="removefileimageBannerMobile" value="1">
					<label class="control-label" for="removefileimageBannerMobile">  Remove</label>
				</span>
			{% endif %}
			<div class="input-group clearfix">
				{{form_widget(form.imageBannerMobile, {'id' : 'imageBannerMobile'})}}
				<span class="input-group-btn">
					<button onclick="selectFileWithCKFinder('imageBannerMobile');" class="btn btn-default" name="imageBannerMobile_btn" id="imageBannerMobile_btn" type="button">Browse Server</button>
				</span>
			</div>
			<p class="help-block">size image 750x656 px</p>
			<div class="error-form">{{form_errors(form.imageBannerMobile)}}</div>
		</div>
	</div>







	{#




	<div class="form-group">
		<label class="control-label col-md-3" for="description"> Description</label>
		<div class="col-md-6">
			{{form_widget(form.description, {'id' : 'description'})}}
			<div class="error-form">{{form_errors(form.description)}}</div>
		</div>
	</div>
	#}

</div>

<div class="box-footer">
	<div class="row">
		<div class="col-md-offset-2 col-md-9">
			{{form_widget(form.save, {'id' : 'save', 'label': btn_label_save})}}
			{{form_widget(form.save_and_add, {'id' : 'save_and_add', 'label': btn_label_save_add})}}
			{{form_widget(form.save_and_edit, {'id' : 'save_and_edit', 'label': btn_label_save_edit})}}
			<a href="{%if app.session.get('back_to_url')['admin_series'] is defined%}{{app.session.get('back_to_url')['admin_series']}}{%else%}{{path('admin_series')}}{%endif%}" class="btn btn-default">{{btn_label_close}} </a>
		</div>
	</div>
</div>
